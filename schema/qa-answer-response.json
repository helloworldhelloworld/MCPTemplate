{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "QaAnswerResponse",
  "type": "object",
  "properties": {
    "question": {
      "type": "string",
      "description": "原始问题"
    },
    "answer": {
      "type": "string",
      "description": "生成的回答"
    },
    "confidence": {
      "type": "number",
      "description": "置信度分数",
      "minimum": 0,
      "maximum": 1
    }
  },
  "required": ["question", "answer"],
  "additionalProperties": false
}
